{
  "compilerOptions": {
    "strict": true,

    "customConditions": ["@todo-backend/development"],
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    "target": "es2022",

    "composite": true,

    "skipLibCheck": true,
  },
}
